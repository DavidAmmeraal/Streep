block content
    .column-right
        #overview
            .loading
            .preview
                a(href="#", class="facebook")
                    img(class='facebook', src='/images/facebook.png')
                img(src='/images/twitter.png')
                img(src='/images/m-wattes.png')
            .price
            .order
                button
                    |   BESTEL
    .column-left
        .loading
            |   Montuur wordt ingeladen
        .contents
            #buttons
                    .switch.on
                        |   &nbsp;
                    button(class='change-frame')
                        |   KIES MONTUUR
                    button(class='change-size')
                        |   KIES MAAT
                    button(class='download-stl')
                        |   Download STL
            .center-wrapper
                #renderer
                #menus
                    .frames
                    .size
                #menu


